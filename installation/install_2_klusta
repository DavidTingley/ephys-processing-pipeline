# copy and paste the below text to install this pipeline


conda create -n klusta python=2.7 --yes

conda install -n klusta scipy pandas=0.12 pytables=3.0 pyqt setuptools pip cython nose ipython-notebook matplotlib --yes

conda install -n klusta numpy=1.8 --yes

source activate klusta

pip install pyopengl

source activate klusta

cd klustakwik2

python setup.py install > kk2_legacy_install.log

cd ..

cp ~/miniconda/envs/klusta/bin/kk2_legacy ~/miniconda/envs/klusta/bin/klustakwik 

cd klustaviewa-3.0.0

python setup.py install > klustaviewa_install.log

cd ..

